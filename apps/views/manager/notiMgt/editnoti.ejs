<!DOCTYPE html>
<html lang="vi">

<head>
    <%- include ../layout/head %>
    <!-- <script src="http://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dungle"></script>
    <script>tinymce.init({ selector: 'textarea' });</script> -->
    <title>Sửa thông báo</title>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-top: 100px;">
                <div class="panel-heading" style="background-color: #408db9; color: white;">
                    Chỉnh sửa thông báo
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <input class="notiID" type="hidden" name="notiID" value="<% if(data && data.notification) {%> <%= data.notification.notiID %> <%}%>">

                            <% if (data && data.error){%>
                            <div id=" editNoti-alert" class="alert alert-danger col-sm-12">
                            <%= data.error %>
                        </div>
                        <%}%>
                                
                            <form role="form" method="" action="">
                                <div class="form-group">
                                    <label for="notiTitle">Tiêu đề thông báo</label>
                                    <input class="form-control notiTitle" name="notiTitle" placeholder="Nhập tiêu đề thông báo" value="<% if (data && data.notification) {%><%= data.notification.notiTitle%><%}%>">
                                </div>

                                <div class="form-group">
                                    <label for="notiContent">Nội dung thông báo</label>
                                    <textarea class="form-control notiContent" name="notiContent" rows="10"
                                        placeholder="Nhập nội dung thông báo vào đây!" value="" ><%if(data && data.notification){%><%= data.notification.notiContent%><%}%></textarea>
                                </div>

                                <div class="form-group">
                                    <a href="/manager/notiMgt/listnoti">
                                        <input class="btn btn-success notiedit" type="button" name="" value="Cập nhật thông báo">
                                    </a>
                                    <a href="/manager/notiMgt/listnoti">
                                        <input class="btn btn-primary notidetail" type="button" name="" value="Cancel">
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <script type="text/javascript" src="/static/js/notiMgt.js"></script>
</body>

</html>