<!DOCTYPE html>
<html lang="vi">

<head>
    <%- include ../layout/head %>
    <!-- <script src="http://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dungle"></script>
    <script>tinymce.init({ selector: 'textarea' });</script> -->
    <title>Sửa tin tức</title>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-top: 100px;">
                <div class="panel-heading" style="background-color: #408db9; color: white;">
                    Chỉnh sửa đơn bán
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <input class="orderID" type="hidden" name="orderID" value="<% if(data && data.ordertable) {%> <%= data.ordertable.orderID %> <%}%>">

                            <% if (data && data.error){%>
                            <div id=" editOrder-alert" class="alert alert-danger col-sm-12">
                            <%= data.error %>
                        </div>
                        <%}%>
                                
                            <form role="form" method="" action="">
                                <div class="form-group">
                                    <label for="userID">UserID</label>
                                    <input class="form-control userID" name="userID" placeholder="Nhập useID" value="<% if (data && data.ordertable) {%><%= data.ordertable.userID%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="listprod">Danh sách sản phẩm</label>
                                    <textarea class="form-control listprod" name="listprod" rows="10"
                                        placeholder="Nhập danh sách!" value="" disabled><%if(data && data.ordertable){%><%= data.ordertable.listprod%><%}%></textarea>
                                </div>

                                <div class="form-group">
                                    <label for="createDate">Ngày tạo</label>
                                    <input class="form-control createDate" name="createDate" placeholder="Nhập ngày tạo" value="<% if (data && data.ordertable) {%><%= data.ordertable.createDate%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="state" class="col-md-3 control-label ">Trạng thái</label>
                                        <select name="state" id="state" class="form-control state">
                                            <option value="Chờ xử lý">Chờ xử lý</option>
                                            <option value="Đã tiếp nhận đơn">Đã tiếp nhận đơn</option>
                                            <option value="Đang đóng gói">Đang đóng gói</option>
                                            <option value="Đang vận chuyển">Đang vận chuyển</option>
                                            <option value="Hoàn thành">Hoàn thành</option>
                                            <option value="Đã hủy">Đã hủy</option>
                                        </select>
                                </div>

                                <div class="form-group">
                                    <a >
                                        <input class="btn btn-success orderedit" type="button" name="" value="Cập nhật đơn bán">
                                    </a>
                                    <a href="/manager/orderMgt/listorder">
                                        <input class="btn btn-primary orderdetail" type="button" name="" value="Cancel">
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <script type="text/javascript" src="/static/js/orderMgt.js"></script>
</body>

</html>