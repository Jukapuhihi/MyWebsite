<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../layout/head %>
    <!-- <script src="http://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dungle"></script>
    <script>tinymce.init({ selector: 'textarea' });</script> -->
    <title>Thêm sản phẩm</title>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-top: 100px;">
                <div class="panel-heading" style="background-color: #408db9; color: white;">
                    Thêm sản phẩm mới
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <% if (data && data.error){%>
                            <div id="addProd-alert" class="alert alert-danger col-sm-12">
                                <%= data.error %>
                            </div>
                            <%}%>
                                
                            <form role="form" method="POST" action="/manager/prodMgt/new" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Tên sản phẩm</label>
                                    <input class="form-control" name="productName" placeholder="Nhập tên sản phẩm">
                                </div>

                                <div class="form-group">
                                    <label>Thể loại</label>
                                    <select class="form-control" name="categoryName" id="categoryName">
                                        <option value="Chăm sóc da toàn thân">Chăm sóc da toàn thân</option>
                                        <option value="Chăm sóc da mặt">Chăm sóc da mặt</option>
                                        <option value="Trang điểm">Trang điểm</option>
                                        <option value="Dụng cụ trang điểm">Dụng cụ trang điểm</option>
                                        <option value="Nước hoa">Nước hoa</option>
                                        <option value="Chăm sóc tóc và móng">Chăm sóc tóc và móng</option>
                                        <option value="Dịch vụ làm đẹp">Dịch vụ làm đẹp</option>
                                        <option value="Dịch vụ trang điểm">Dịch vụ trang điểm</option>
                                        <option value="Khóa học trang điểm">Khóa học trang điểm</option>
                                        <option value="Dành cho quý ông">Dành cho quý ông</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Thương hiệu</label>
                                    <select class="form-control" name="productBrand" id="productBrand">
                                        <option value="Avene">Avene</option>
                                        <option value="Vichy">Vichy</option>
                                        <option value="Victoria's Secret">Victoria's Secret</option>
                                        <option value="La Roche Posay">La Roche Posay</option>
                                        <option value="Neutrogena">Neutrogena</option>
                                        <option value="SVR">SVR</option>
                                        <option value="Rohto">Rohto</option>
                                        <option value="Naruko">Naruko</option>
                                        <option value="Givenchy">Givenchy</option>
                                        <option value="YSL">YSL</option>
                                        <option value="3CE">3CE</option>
                                        <option value="Laneige">Laneige</option>
                                        <option value="Lime">Lime</option>
                                        <option value="Vacosi">Vacosi</option>
                                        <option value="BH Cosmetics">BH Cosmetics</option>
                                        <option value="The face shop">The face shop</option>
                                        <option value="Tony Moly">Tony Moly</option>
                                        <option value="Burberry">Burberry</option>
                                        <option value="LIDL">LIDL</option>
                                        <option value="Jo Malone">Jo Malone</option>
                                        <option value="Carolina Herrera New York EDP">Carolina Herrera New York EDP</option>
                                        <option value="Dior">Dior</option>
                                        <option value="MiseEn">MiseEn</option>
                                        <option value="L'OREAL PARIS">L'OREAL PARIS</option>
                                        <option value="Balea">Balea</option>
                                        <option value="Innisfree">Innisfree</option>
                                        <option value="Lucky Trần">Lucky Trần</option>
                                        <option value="T&T Hair Salon">T&T Hair Salon</option>
                                        <option value="Viện tóc Oxy">Viện tóc Oxy</option>
                                        <option value="Sen Spa">Sen Spa</option>
                                        <option value="Linh Killdy Makeup Store">Linh Killdy Makeup Store</option>
                                        <option value="Yêu Media">Yêu Media</option>
                                        <option value="Quách Ánh Makeup Store">Quách Ánh Makeup Store</option>
                                        <option value="John Kim Wedding">John Kim Wedding</option>
                                        <option value="Mai Đỗ Make Up">Mai Đỗ Make Up</option>
                                        <option value="Tina Lê Make Up">Tina Lê Make Up</option>
                                        <option value="Shiseido">Shiseido</option>
                                        <option value="Versace">Versace</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Giá</label>
                                    <input class="form-control" name="price" placeholder="Nhập giá sản phẩm">
                                </div>

                                <div class="form-group">
                                    <label>Số lượng</label>
                                    <input class="form-control" name="quantity" placeholder="Nhập số lượng sản phẩm">
                                </div>

                                <div class="form-group">
                                    <label>Mô tả sản phẩm</label>
                                    <textarea rows="10" class="form-control" name="productDescribe"
                                        placeholder="Nhập mô tả sản phẩm vào đây!"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Tải ảnh sản phẩm lên</label>
                                    <input class="btn btn-primary" type="file" name="productImg" value="Ảnh sản phẩm">
                                </div>

                                <div class="form-group">
                                    <a href="/manager/prodMgt/listprod">
                                        <input class="btn btn-success" type="submit" name="" value="Thêm sản phẩm">
                                    </a>
                                    <a href="/manager/prodMgt/listprod">
                                        <input class="btn btn-primary newsdetail" type="button" name="" value="Cancel">
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <script src="../../static/js/optsort.js"></script>
</body>

</html>