<!DOCTYPE html>
<html lang="vi">

<head>
    <%- include ../layout/head %>
    <!-- <script src="http://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dungle"></script>
    <script>tinymce.init({ selector: 'textarea' });</script> -->
    <title>Xem sản phẩm</title>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-top: 100px;">
                <div class="panel-heading" style="background-color: #408db9; color: white;">
                    Thông tin sản phẩm
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <input class="productID" type="hidden" name="productID" value="<% if(data && data.product) {%> <%= data.product.productID %> <%}%>">

                            <% if (data && data.error){%>
                            <div id="detailProd-alert" class="alert alert-danger col-sm-12">
                                <%= data.error %>
                            </div>
                            <%}%>
                                
                            <form role="form" method="" action="">
                                <div class="form-group">
                                    <label for="productName">Tên sản phẩm</label>
                                    <input class="form-control productName" name="productName" placeholder="Nhập tên sản phẩm" value="<% if (data && data.product) {%>
                                    <%= data.product.productName%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="productBrand">Thương hiệu</label>
                                    <input class="form-control productBrand" name="productBrand" placeholder="Nhập tên thương hiệu" value="<% if (data && data.product) {%>
                                    <%= data.product.productBrand%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="price">Giá</label>
                                    <input class="form-control price" name="price" placeholder="Nhập giá sản phẩm" value="<% if (data && data.product) {%>
                                    <%= data.product.price%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <label for="productDescribe">Mô tả sản phẩm</label>
                                    <textarea class="form-control productDescribe" name="productDescribe"
                                        placeholder="Nhập mô tả sản phẩm vào đây!" value="<% if (data && data.product) {%>
                                        <%= data.product.productDescribe%><%}%>" disabled></textarea>
                                </div>

                                <div class="form-group">
                                    <label for="productImg">Tải ảnh sản phẩm lên</label>
                                    <input class="btn btn-primary productImg" type="file" name="productImg" value="<% if (data && data.product) {%>
                                    <%= data.product.productImg%><%}%>" disabled>
                                </div>

                                <div class="form-group">
                                    <input class="btn btn-success proddetail" type="button" name="" value="Cancel">
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <script type="text/javascript" src="/static/js/prodMgt.js"></script>
</body>

</html>