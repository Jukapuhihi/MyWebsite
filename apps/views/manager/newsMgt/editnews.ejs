<!DOCTYPE html>
<html lang="vi">

<head>
    <%- include ../layout/head %>
    <!-- <script src="http://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dungle"></script>
    <script>tinymce.init({ selector: 'textarea' });</script> -->
    <title>Sửa tin tức</title>
</head>

<body>
    <div class="container">
        <%- include ../layout/nav %>

        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-top: 100px;">
                <div class="panel-heading" style="background-color: #408db9; color: white;">
                    Chỉnh sửa tin tức
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <input class="newsID" type="hidden" name="newsID" value="<% if(data && data.news) {%> <%= data.news.newsID %> <%}%>">

                            <% if (data && data.error){%>
                            <div id=" editNews-alert" class="alert alert-danger col-sm-12">
                            <%= data.error %>
                        </div>
                        <%}%>
                                
                            <form role="form" method="" action="">
                                <div class="form-group">
                                    <label for="newsTitle">Tiêu đề tin tức</label>
                                    <input class="form-control newsTitle" name="newsTitle" placeholder="Nhập tiêu đề tin tức" value="<% if (data && data.news) {%><%= data.news.newsTitle%><%}%>">
                                </div>

                                <div class="form-group">
                                    <label for="newsContent">Nội dung tin tức</label>
                                    <textarea class="form-control newsContent" name="newsContent" rows="10"
                                        placeholder="Nhập nội dung tin tức vào đây!" value="" ><%if(data && data.news){%><%= data.news.newsContent%><%}%></textarea>
                                </div>

                                <div class="form-group">
                                    <a href="/manager/newsMgt/listnews">
                                        <input class="btn btn-success newsedit" type="button" name="" value="Cập nhật tin tức">
                                    </a>
                                    <a href="/manager/newsMgt/listnews">
                                        <input class="btn btn-primary newsdetail" type="button" name="" value="Cancel">
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <script type="text/javascript" src="/static/js/newsMgt.js"></script>
</body>

</html>